package com.rules4j.tests;

import com.rules4j.data.IRule;
import com.rules4j.engine.IRuleEngine;
import com.rules4j.engine.RuleEngine;
import com.rules4j.repository.IRuleStore;

public class TestBase {

	private IRuleStore Pool { get; set; }
	protected IRuleEngine Engine { get; set; }

	protected void Init()
     {
         this.Pool = MemoryRuleStore.Default;
         this.Engine = new RuleEngine(this.Pool);
     }

	public void End() {
		this.Clear();
	}

	protected void AddRule(IRule rule) {
		this.Pool.AddRule(rule);
	}

	private void Clear() {
		this.Pool.Clear();
	}
}
