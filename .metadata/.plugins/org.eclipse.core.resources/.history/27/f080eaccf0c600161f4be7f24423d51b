package com.rules4j.helpers;

import java.lang.reflect.Field;
import java.lang.reflect.Method;
import java.util.HashMap;
import java.util.Map;

public class ObjectHelper {

	public static Map<String, Object> toMap(Object data){
		Map<String, Object> map = new HashMap<String, Object>();
		
		for(Method method : data.getClass().getMethods())
			map.pu
		
		return map;
	}

	private static void putValues(Object bean, Map<String, Object> map, String prefix) throws IllegalAccessException {
		Class<?> cls = bean.getClass();

		for (Field field : cls.getDeclaredFields()) {
			field.setAccessible(true);

			Object value = field.get(bean);
			String key;
			if (prefix == null) {
				key = field.getName();
			} else {
				key = prefix + "." + field.getName();
			}

			map.put(key, value);
		}
	}
}
